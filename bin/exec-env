#!/usr/bin/env bash

# This script is sourced by the asdf command before executing Subversion.
# It sets up any required environment variables.

# Set SVN specific environment variables if needed
# For example, ensuring locale settings are correct
export LC_ALL=C

# Set path to find libraries if needed
if [ -d "$ASDF_INSTALL_PATH/lib" ]; then
    export LD_LIBRARY_PATH="$ASDF_INSTALL_PATH/lib:$LD_LIBRARY_PATH"
    # For macOS
    export DYLD_LIBRARY_PATH="$ASDF_INSTALL_PATH/lib:$DYLD_LIBRARY_PATH"
fi

# Path to SVN config directory (default is ~/.subversion)
export SVN_CONFIG_DIR="${SVN_CONFIG_DIR:-$HOME/.subversion}"
